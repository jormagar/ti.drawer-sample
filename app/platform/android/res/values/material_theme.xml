<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Color palette -->
	<color name="primary_dark">#007ac1</color>
	<color name="primary">#03a9f4</color>
	<color name="primary_light">#67daff</color>
	<color name="white">#FFFFFF</color>
	<color name="white_dark">#F2F2F2</color>
	<color name="gray">#8395a7</color>
	<color name="gray_dark">#576574</color>
	<color name="gray_light">#c8d6e5</color>
	<color name="black">#222f3e</color>
	<color name="black_transparent">#8817202b</color>

	<style name="Theme.Material" parent="@style/Theme.AppCompat.Light">
		<!-- Status bar color -->
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<!-- Action bar color -->
		<item name="colorPrimary">@color/primary</item>
		<!-- Navigation bar color -->
		<item name="android:navigationBarColor">@color/black</item>
		<!-- Text color -->
		<item name="android:textColorPrimary">@color/white</item>
		<!-- Default control color -->
		<item name="colorControlNormal">@color/primary_light</item>
		<!-- Active control color -->
		<item name="colorControlActivated">@color/primary</item>
		<!-- Touch control color -->
		<item name="colorControlHighlight">@color/primary_light</item>
		<!-- Scrolling edge color -->
		<item name="android:colorEdgeEffect">@color/primary_dark</item>
		<!-- Activity indicator color -->
		<item name="android:indeterminateTint">@color/primary</item>
		<!-- Status bar theme  >= Android 8 -->
		<item name="android:windowLightStatusBar">false</item>
	</style>
	<style name="Theme.Material.NoTitleBar" parent="Theme.Material">
		<!-- Hide Action bar -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<!-- AppCompat Compatibility -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<!-- Status bar color -->
		<item name="colorPrimaryDark">@color/white</item>
		<item name="android:statusBarColor">@color/white</item>
	</style>

	<style name="Theme.Material.Translucent.NoTitleBar" parent="Theme.Material.NoTitleBar">
		<!-- Translucent attributes -->
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
		<!-- Drawer icon animation -->
		<item name="spinBars">true</item>
		<!-- Drawer icon color -->
		<item name="color">@color/white</item>
	</style>

	<style name="Theme.Material.NoTitleBar.Drawer" parent="Theme.Material.NoTitleBar">
		<!-- Set drawer style -->
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
	</style>

	<style name="Theme.Splash" parent="@style/Theme.Titanium">
		<!-- Make splash theme translucent -->
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@drawable/bg</item>
	</style>
</resources>
